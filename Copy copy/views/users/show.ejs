<div class="container" style="margin-top: 100px !important;">

  <h1 class="center">
    <%= user.fullName %>
  </h1>

  <table class="table">
    <tr>
      <th>Name</th>
      <td>
        <%= user.fullName %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= user.email%>
      </td>
    </tr>
    <tr>
      <th>User Name</th>
      <td>
        <%= user.userName%>
      </td>
    </tr>
    <tr>
      <th>Password</th>
      <td>********</td>
    </tr>
  </table>

  <div class="center">
    <a class="button" href="<%=`/users/${user._id}/edit`%>">
      Edit Account Information
    </a>
  </div>
  <div class="center">
    <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this record?')" a>Delete Account</a>
  </div>
</div>